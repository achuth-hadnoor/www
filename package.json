{
  "name": "achuthhadnoor",
  "description": "My personal website.",
  "version": "0.0.0",
  "author": {
    "name": "Achuth Hadnoor",
    "email": "achuth.hadnoor123@gmail.com",
    "url": "https://achuth.now.sh"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achuthhadnoor/www.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,md,mdx,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "comma-number": "2.0.1",
    "date-fns": "2.13.0",
    "@mdx-js/loader": "^1.6.6",
    "@next/mdx": "^9.4.4",
    "mdx-prism": "^0.3.1",
    "next": "9.4.4",
    "next-mdx-enhanced": "^3.0.0",
    "next-seo": "^4.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons-kit": "^1.3.1",
    "reading-time": "^1.2.0",
    "remark-autolink-headings": "6.0.0",
    "remark-capitalize": "1.1.0",
    "remark-code-titles": "0.1.1",
    "remark-slug": "6.0.0",
    "styled-components": "^4.4.1",
    "swr": "0.2.0"
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ],
          "import-glob-array"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ],
          "import-glob-array"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ],
          "import-glob-array"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ],
          "import-glob-array"
        ]
      }
    },
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "import-glob-array"
    ]
  },
  "devDependencies": {
    "babel-plugin-import-glob-array": "^0.2.0",
    "babel-plugin-styled-components": "^1.10.7",
    "prettier": "^2.0.5",
    "rehype": "^11.0.0",
    "eslint-config-get-off-my-lawn": "5.0.1",
    "globby": "11.0.0",
    "husky": "4.2.3",
    "lint-staged": "10.1.2"
  }
}
